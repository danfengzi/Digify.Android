<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:background="@drawable/queue_background"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_alignParentTop="true"
    android:id="@+id/company_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_alignParentLeft="true"
        android:padding="20dp"
        android:id="@+id/tenant_name"
        tools:text="Three Angel's Pharmacy"
        android:layout_centerVertical="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/online_layout"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:background="@drawable/online"
        android:layout_height="40dp"><TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:text="Online"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/online_text"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content" /></RelativeLayout>
</RelativeLayout>
<LinearLayout
    android:layout_below="@id/company_details"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:text="NOW SERViNG"
    android:textAppearance="?android:textAppearanceLarge"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content" />
    <fragment
        android:layout_alignParentLeft="true"
        android:id="@+id/fragment"
        android:name="digify.tv.ui.fragments.QueueFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
         />
</LinearLayout>



    <FrameLayout
        android:layout_margin="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="800dp"
        android:layout_height="600dp">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <FrameLayout
            android:id="@+id/playback_controls_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>
</RelativeLayout>